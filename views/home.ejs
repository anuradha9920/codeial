<h1>

    Codeial / <%= title %>
    <ul>
        <% if(locals.user){ %>
            <li>
                <a href="/users/profile">
                    <%= user.name %>
                </a>
            </li>
            <li>
                <a href="/users/sign-out">Sign Out</a>
            </li>
        <% }else{ %>
            <li>
                <a href="users/sign-in"> Sign In</a>
            </li>
            <li>
                <a href="users/sign-up"> Sign Up</a>
            </li>
        <% } %>       
    </ul>
</h1>
<section id="feed-posts">
    <h4>
        Posts
    </h4>
    <form action="" method="POST" id="new-post-form">
        <textarea name="content" col="40" rows="5" placeholder="type here...">
        </textarea>
        <input type="submit" value="Post">
    </form>
</section>