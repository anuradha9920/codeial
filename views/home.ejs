<h1>

    Codeial / <%= title %>
    <ul>
        <% if(locals.user){ %>
            <li>
                <a href="/users/profile">
                    <%= user.name %>
                </a>
            </li>
            <li>
                <a href="/users/sign-out">Sign Out</a>
            </li>
            <section id="feed-posts">
                <h4>
                    Posts
                </h4>
                <form action="/posts/create" method="POST" id="new-post-form">
                    <textarea name="content" col="40" rows="5" placeholder="type here..." required></textarea>
                    <input type="submit" value="Post">
                </form>
                   
            </section>
        <% }else{ %>
            <li>
                <a href="users/sign-in"> Sign In</a>
            </li>
            <li>
                <a href="users/sign-up"> Sign Up</a>
            </li>
        <% } %>       
    </ul>
    <ul>
        <% for(let i of posts){%>
            <!--passing data to partials-->
            <%-include('_post', {i:i}); %>
        <% } %>
    </ul> 
</h1>