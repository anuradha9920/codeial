<link rel="stylesheet" href="/css/user_profile.css">
<%= title %>

<h1>
    Codeial/Profile Page
</h1>

<p><%= user.name %></p>
<p> <%= user.email %> </p>
<div class="profile_wall">
    <h1>Your Posts</h1>
    <% for(let i of posts){%>
        <li>
            <%= i.content %>
            <small>
                <a href="/posts/destroy/<%= i.id %>">delete</a>
            </small>
            <h2>comments</h2>
            <ul>
                <% for(comment of i.comments){ %>
                    <li>
                        <p>
                            <% if(locals.user){ %>
                                <small>
                                    <a href="/comments/destroy/<%= comment.id %>">X</a>
                                </small>
                            <% } %> 
                        </p>
                        <%= comment.content %> by <%= comment.user.name %> 
                    </li>
                <% } %>      
            </ul>
        </li> 

    <% } %>
</div>